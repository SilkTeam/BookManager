@{
    ViewBag.Title = "Index";
    if (Session["Identity"] != null)
    {
        Layout = "~/Views/Shared/_User.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    var list = ViewBag.list as List<BookManager.Models.Book>;
}
<div class="row">
    @foreach (var item in list)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="bd-placeholder-img card-img-top" width="350" height="225" focusable="false"><img style="width:348px;height:225px;" src="@item.Img" /></div>
                <div class="card-body">
                    <p class="card-title">@item.Name</p>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">借阅</button>
                            @*<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>*@
                        </div>
                        <small class="text-muted">@item.EntryTime 入馆</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>