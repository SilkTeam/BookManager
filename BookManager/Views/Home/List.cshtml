
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_User.cshtml";
    var list = ViewBag.list as List<BookManager.Models.Book>;
}
<div class="row">
    @foreach (var item in list)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="bd-placeholder-img card-img-top" width="350" height="225" focusable="false">
                    @if (@item.Img != null)
                    {
                        <img style="width:100%;height:225px;" src="@item.Img" />
                    }
                    else
                    {
                        <img style="width:100%;height:225px;" src="~/Upload/Default.jpg" />
                    }
                </div>
                <div class="card-body">
                    <p class="card-title">@item.Name</p>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        @if (Session["Identity"] != null)
                        {

                            <div class="btn-group">
                                <a type="button" href="/Borrow/Index?ID=@(item.ID)" class="btn btn-sm btn-outline-secondary">借阅</a>
                            </div>
                        }
                        <small class="text-muted">@item.EntryTime 入馆</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>