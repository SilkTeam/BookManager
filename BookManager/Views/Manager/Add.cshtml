@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Manager.cshtml";
}
<h2>添加借阅卡</h2>
<form action="/Manager/Add" method="post">
    <div class="form-group">
        <label>姓名:</label>
        <input type="text" class="form-control" id="Name" name="Name">
    </div>
    <div class="form-group">
        <label>密码:</label>
        <input type="text" class="form-control" id="Password" name="Password">
    </div>
    <div class="form-group">
        <label>性别:</label>
        <select class="form-control" id="Sex" name="Sex">
            <option value="0">女</option>
            <option value="1">男</option>
            <option value="2">保密</option>
        </select>
    </div>
    @if (Convert.ToInt32(Session["Identity"]) == 2)
    {
        <div class="form-group">
            <label>身份:</label>
            <select class="form-control" id="Identity" name="Identity">
                <option value="0">读者</option>
                <option value="1">图书管理员</option>
                @*<option value="2">保密</option>*@
            </select>
        </div>
    }
    <div class="form-group">
        <label>年龄:</label>
        <input type="number" class="form-control" id="Age" name="Age">
    </div>
    <div class="form-group">
        <label>联系方式:</label>
        <input type="tel" class="form-control" id="Phone" name="Phone">
    </div>
    <button id="submit" class="btn btn-primary">添加</button>
</form>
@section scripts{
    <script>
        $("#submit").click(function () {
            layer.load(2, { shade: false });
            var data = {
                Name: $("#Name").val(),
                Password: $("#Password").val(),
                Age: $("#Age").val(),
                Sex: $("#Sex").val(),
                Identity: $("#Identity").val(),
                Phone: $("#Phone").val(),
            };
            $.post("/Manager/Add", data, function (res) {
                setTimeout(function () {
                    layer.closeAll('loading');
                }, 1000);
                if (res == "success") {
                    layer.alert("添加成功！");
                    setTimeout(function () {
                        window.location.href = "/Manager/Index";
                    }, 1500);
                } else {
                    layer.alert(res);
                };
            });
            return false;
        });
    </script>
}