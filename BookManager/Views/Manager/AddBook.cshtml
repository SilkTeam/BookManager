
@{
    ViewBag.Title = "AddBook";
    Layout = "~/Views/Shared/_Manager.cshtml";
    var list = ViewBag.list as List<BookManager.Models.Category>;
}
<h2>AddBook</h2>
<form action="/Manager/AddBook" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>书名:</label>
        <input type="text" class="form-control" name="Name" placeholder="书名">
    </div>
    <div class="form-group">
        <label>封面:</label>
        <input type="file" class="form-control" name="Img">
    </div>
    <div class="form-group">
        <label>介绍:</label>
        <textarea type="text" class="form-control" name="Description" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label>分类:</label>
        <select name="Category">
            @foreach (var item in list)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>数量:</label>
        <input type="number" class="form-control" name="Number" placeholder="数量" min="1" value="1">
    </div>
    <div class="form-group">
        <label>作者:</label>
        <input type="text" class="form-control" name="Author" placeholder="作者">
    </div>
    <button id="submit" class="btn btn-primary">添加书籍</button>
</form>