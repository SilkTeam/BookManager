@model BookManager.Models.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_Manager.cshtml";
}
<h2>修改分类</h2>
<form action="/Manager/EditUser" method="post">
    <div class="form-group">
        <label>编号:</label>
        <input type="number" disabled class="form-control" value="@Model.ID">
    </div>
    <div class="form-group">
        <label>分类名:</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
    </div>
    <button id="submit" class="btn btn-primary">修改</button>
</form>
@section scripts{
    <script>
        $("#submit").click(function () {
            layer.load(2, { shade: false });
            var data = {
                Name: $("#Name").val(),
            };
            $.post("/Manager/EditCategory", data, function (res) {
                setTimeout(function () {
                    layer.closeAll('loading');
                }, 1000);
                if (res == "success") {
                    layer.alert("修改成功！");
                    setTimeout(function () {
                        window.location.href = "/Manager/Category";
                    }, 1500);
                } else {
                    layer.alert(res);
                };
            });
            return false;
        });
    </script>
}